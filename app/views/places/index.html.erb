<h3>places to get your wine</h3>
<% if @places %>
  <table class="table table-hover">
    <thead>
      <% Place.rendered_fields.each do |field| %>
        <th><%= field %></th>
      <% end %>
    </thead>
    <% @places.each do |place| %>
      <tr>
        <% Place.rendered_fields.each do |field| %>
              <% if field == :name %>
                <td><%= link_to place.send(field), place_path(place.id) %></td>
              <% else %>
                <td><%= place.send(field) %></td>
              <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>

<% if @places %>
<h3>the current wine weather in <%= @places.first.city %></h3>
<% end %>


<% if @weathers%>
    <table class="table table-hover">
    <thead>
      <% Weather.rendered_fields.each do |field| %>
        <th><%= field %></th>
      <% end %>
    </thead>
    <% @weathers.each do |weather| %>
      <tr>
        <% Weather.rendered_fields.each do |field| %>
          <td><%= weather.send(field) %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>

