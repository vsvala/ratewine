<p id="notice"><%= notice %></p>

<h1>Wineyards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wineyards.each do |wineyard| %>
      <tr>
        <td><%= wineyard.name %></td>
        <td><%= wineyard.year %></td>
        <td><%= link_to 'Show', wineyard %></td>
        <td><%= link_to 'Edit', edit_wineyard_path(wineyard) %></td>
        <td><%= link_to 'Destroy', wineyard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

