<p id="notice"><%= notice %></p>

<h2>Wineyards</h2>
<p> Number of wineyards: <%= @wineyards.count %> </p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wineyards.each do |wineyard| %>
      <tr>
        <td><%= link_to wineyard.name, wineyard %></td>
        <td><i>Established in <%= wineyard.year %></i></td>
        <td><%= link_to 'Edit', edit_wineyard_path(wineyard) %></td>
        <td><%= link_to 'Destroy', wineyard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wineyard', new_wineyard_path %>
