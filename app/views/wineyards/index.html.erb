<p id="notice"><%= notice %></p>

<h1>Wineyards</h1>
<p> Number of wineyards: <%= @wineyards.count %> </p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wineyards.each do |wineyard| %>
      <tr>
        <td><%= link_to wineyard.name, wineyard %></td>
        <td><%= wineyard.year %></td>
        <% if not current_user.nil? %>
          <td><%= link_to 'Edit', edit_wineyard_path(wineyard) %></td>
          <td><%= link_to 'Destroy', wineyard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= link_to('New Wineyard', new_wineyard_path) if current_user %>
<br>

<%= link_to 'list of wines', wines_path %>


